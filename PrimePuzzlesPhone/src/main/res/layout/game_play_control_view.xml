<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameControlView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePlay.GamePlay">

    <TextView xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/randomTop"
        android:layout_width="139dp"
        android:layout_height="139dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/light"
        android:textSize="31sp"
        android:elevation="23dp"
        android:background="@drawable/background_random_top_button"

        apps:autoSizeTextType="uniform"
        apps:autoSizeMinTextSize="12dp"
        apps:autoSizeMaxTextSize="31sp"
        apps:autoSizeStepGranularity="1sp"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintRight_toRightOf="parent"
        apps:layout_constraintLeft_toLeftOf="parent" />

    <TextView xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/randomLeft"
        android:layout_width="139dp"
        android:layout_height="139dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/light"
        android:textSize="31sp"
        android:elevation="23dp"
        android:background="@drawable/background_random_left_button"

        apps:autoSizeTextType="uniform"
        apps:autoSizeMinTextSize="12dp"
        apps:autoSizeMaxTextSize="31sp"
        apps:autoSizeStepGranularity="1sp"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintLeft_toLeftOf="parent" />

    <TextView xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/randomRight"
        android:layout_width="139dp"
        android:layout_height="139dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/light"
        android:textSize="31sp"
        android:elevation="23dp"
        android:background="@drawable/background_random_right_button"

        apps:autoSizeTextType="uniform"
        apps:autoSizeMinTextSize="12dp"
        apps:autoSizeMaxTextSize="31sp"
        apps:autoSizeStepGranularity="1sp"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintRight_toRightOf="parent" />

    <net.geeksempire.primepuzzles.GameView.GesturedRandomCenter xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/gesturedRandomCenter"
        android:layout_width="139dp"
        android:layout_height="139dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/light"
        android:textSize="31sp"
        android:elevation="0dp"
        android:background="@drawable/background_random_center_button"

        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12dp"
        app:autoSizeMaxTextSize="31sp"
        app:autoSizeStepGranularity="1sp"

        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintLeft_toLeftOf="parent"
        apps:layout_constraintRight_toRightOf="parent"
        apps:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>