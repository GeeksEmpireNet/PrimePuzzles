<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameInformationView"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    android:background="@drawable/background_points"
    tools:context=".GamePlay.GamePlay">

    <TextSwitcher
        android:id="@+id/pointsTotalView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="73sp"
        android:textColor="@color/light"
        android:shadowColor="@color/lighter"
        android:shadowRadius="29"
        android:shadowDx="0"
        android:shadowDy="0"
        android:background="@color/transparent"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out">
        <TextView xmlns:apps="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pointsTotalViewOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="73sp"
            android:textColor="@color/light"
            android:shadowColor="@color/lighter"
            android:shadowRadius="29"
            android:shadowDx="0"
            android:shadowDy="0"

            apps:autoSizeTextType="uniform"
            apps:autoSizeMinTextSize="12dp"
            apps:autoSizeMaxTextSize="73sp"
            apps:autoSizeStepGranularity="3sp"

            android:background="@color/transparent" />
        <TextView xmlns:apps="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pointsTotalViewTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="73sp"
            android:textColor="@color/light"
            android:shadowColor="@color/lighter"
            android:shadowRadius="29"
            android:shadowDx="0"
            android:shadowDy="0"

            apps:autoSizeTextType="uniform"
            apps:autoSizeMinTextSize="12dp"
            apps:autoSizeMaxTextSize="73sp"
            apps:autoSizeStepGranularity="3sp"

            android:background="@color/transparent" />
    </TextSwitcher>

    <net.geeksempire.ProgressBar.HorizontalProgressView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/timerProgressBar"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-7dp"

        app:animateType="AccelerateDecelerateInterpolator"
        app:corner_radius="0dp"
        app:start_color="@color/light"
        app:end_color="@color/default_color_game_dark"
        app:progressTextVisibility="false"
        app:isTracked="false"
        app:trackColor="@color/transparent"/>
</RelativeLayout>