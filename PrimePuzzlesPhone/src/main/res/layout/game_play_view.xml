<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".GamePlay.GamePlay">

    <!-- AdMob -->

    <include
        android:id="@+id/gameInformationView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/game_information_view" />

    <include
        android:id="@+id/gameControlInclude"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/gameInformationView"
        layout="@layout/game_play_control_view"/>



</RelativeLayout>