<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullConfigurationView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game_configuration"
    tools:context=".GameConfigurations">

    <net.geeksempire.loadingspin.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signInWaiting"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:visibility="invisible"

        app:SpinKit_Style="FoldingCube"
        app:SpinKit_Color="@color/light"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintLeft_toLeftOf="parent"
        apps:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>