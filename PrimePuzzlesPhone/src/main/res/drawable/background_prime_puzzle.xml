<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <color android:color="@color/default_color_darker"/>
    </item>

    <item >
        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <gradient
                android:type="radial"
                android:centerX="50%"
                android:centerY="93%"
                android:gradientRadius="100%"
                android:startColor="@color/default_color"
                android:centerColor="@color/default_color_transparent"
                android:endColor="@color/transparent" />
        </shape>
    </item>
</layer-list>