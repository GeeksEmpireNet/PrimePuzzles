<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/default_color_game_light">
    <item
        android:id="@android:id/mask">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/default_color_game_light" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="50%"
                android:centerY="50%"
                android:gradientRadius="100%"
                android:startColor="@color/default_color_game_transparent"
                android:centerColor="@color/default_color_darker_transparent"
                android:endColor="@color/default_color_darker_transparent" />
        </shape>
    </item>
</ripple>